<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- Remove the action bar shadow effect on pre-Lollipop devices -->
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="TabLayoutTheme" parent="Widget.Design.TabLayout">
        <item name="tabTextColor">@android:color/secondary_text_dark</item>
        <item name="tabSelectedTextColor">@android:color/white</item>
        <item name="tabIndicatorColor">@color/colorAccent</item>
        <item name="tabIndicatorHeight">3dp</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="TextViewDirectionsStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:background">@color/colorPrimaryLightest</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:elevation">5dp</item>
        <item name="android:singleLine">true</item>
    </style>

</resources>
